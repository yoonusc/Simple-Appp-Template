<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ec7070"
            android:id="@+id/linearLayout3"
            android:layout_alignBottom="@+id/txtTitle"></LinearLayout>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/nliveo_black"
            android:layout_marginTop="16dp"
            android:text="Set Contact"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp"
            android:typeface="serif" />

        <EditText android:id="@+id/etSubject"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_below="@+id/etTo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:hint="Event Name" />

        <EditText android:id="@+id/etTo"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:hint="Name"

            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText android:id="@+id/etMessage"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="6"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="College "
            android:layout_below="@+id/etSubject"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Button android:id="@+id/btnOK"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/Base.Widget.AppCompat.Button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="6"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="Branch and Semester"
            android:layout_below="@+id/etMessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>